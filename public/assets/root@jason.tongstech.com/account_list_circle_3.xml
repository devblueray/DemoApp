<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval" >

            <gradient
                android:centerX=".6"
                android:centerY=".40"
                android:endColor="#5ec5f1"
                android:gradientRadius="20"
                android:startColor="#5ec5f1"
                android:type="radial" />

            <stroke
                android:width="3dp"
                android:color="#5ec5f1" />

            <size
                android:height="100dp"
                android:width="100dp" />

        </shape>
    </item>
</layer-list>